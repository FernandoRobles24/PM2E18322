<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:maps="clr-namespace:Microsoft.Maui.Controls.Maps;assembly=Microsoft.Maui.Controls.Maps"
             x:Class="PM2E18322.Views.Mapa"
             Title="Mapa">
    <Grid>
        <maps:Map x:Name="MyMap"
                  WidthRequest="400"
                  HeightRequest="600"
                  IsShowingUser="true"
                  VerticalOptions="Start" />

        <Button
            x:Name="btnCompartir"
            Margin="35,0,0,30"
            Background="#00532c"
            TextColor="White"
            FontAttributes="Bold"
            WidthRequest="150"
            HeightRequest="50"
            Clicked="btnCompartir_Clicked"
            VerticalOptions="End"
            HorizontalOptions="Start"
            Text="COMPARTIR" />
        <Button
            x:Name="btnSalir"
            Margin="0,0,35,30"
            Background="#00532c"
            TextColor="White"
            FontAttributes="Bold"
            WidthRequest="150"
            HeightRequest="50"
            Clicked="btnSalir_Clicked"
            VerticalOptions="End"
            HorizontalOptions="End"
            Text="SALIR" />
    </Grid>
</ContentPage>